<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_get_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="GetInfoActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_get_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="GetAccountActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_get_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="GetCurrencyActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="CreateAccountActivity"
        android:textAllCaps="false" />

</LinearLayout>